{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "outDir": "dist",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/runtimes/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "vitest.config.ts",
    "tests",
    "src/__tests__",
    "**/*.test.ts"
  ]
}