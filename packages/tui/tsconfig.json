{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "outDir": "dist",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "node16",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": [
    "src/tui/**/*",
    "src/client/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "vitest.config.ts",
    "tests",
    "src/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}